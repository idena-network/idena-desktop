{
  "[javascript]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false
  },
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
